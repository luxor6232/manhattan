<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-10 offset-lg-1">
      <div class="bg-white rounded p-3 shadow">
        <h1 style="text-align:center;">Formulario</h1>
          <%= simple_form_for [@service] do |f| %>
            <%= f.input :title, prompt: "Titulo del servicio", class:"", placeholder: "Título del servicio", label:"Título" %>
            <%= f.input :content,prompt: "Contexto del serivicio", class:"", placeholder: "Ingrese su mensaje", label:"Descripción"%>
            <%= f.input :price, prompt: "Valor del servicio", class:"", placeholder: "Valor del servicio", label:"Valor"%>
            <%= f.input :photo, as: :file %>
            <%= f.submit class: "btn btn-primary", value:"Crear servicio"%>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>