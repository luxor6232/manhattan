<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h1 style="text-align:center;">Servicios</h1>
                    <table class="table">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">title</th>
                  <th scope="col">content</th>
                  <th scope="col">price</th>
                </tr>
              </thead>
          <% @services.each do |service| %>
              <tbody>
                <tr>
                  <th scope="row">1</th>
                  <th><%= service.title %></th>
                </tr>
                <tr>
                  <th scope="row">2</th>
                    <th><%= service.content %></th>
                </tr>
                <tr>
                  <th scope="row">3</th>
                    <th><%= service.price %></th>
                </tr>
              </tbody>
            </table>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

