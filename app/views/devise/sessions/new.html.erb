<div class="container ">
  <div class="row justify-content-md-center form-label ">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card border-0 shadow rounded-3 my-5">
        <div class="card-body p-4 p-sm-5">
          <h2 class="card-title text-center ">Iniciar sesión</h2>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, label:"Correo electrónico",
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email"} %>
            <%= f.input :password, label:"Contraseña",
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, label:"Recuérdame", as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", value:"Iniciar sesión", class:"btn btn-primary btn-login text-uppercase fw-bold"%>
          </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>



